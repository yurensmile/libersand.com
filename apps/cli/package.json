{
  "name": "1chooo-com-cli",
  "version": "0.13.6",
  "type": "module",
  "private": true,
  "license": "CC-BY-4.0",
  "author": {
    "name": "Chun-Ho (Hugo) Lin",
    "email": "hugo@1chooo.com",
    "url": "https://1chooo.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/1chooo/portfolio"
  },
  "description": "1chooo.com is a personal portfolio and blog website built with Next.js, React, and TypeScript. It features a modern design, supports Markdown content, and includes various interactive components.",
  "homepage": "https://1chooo.com",
  "bugs": {
    "url": "https://github.com/1chooo/portfolio/issues"
  },
  "keywords": [
    "next",
    "react",
    "portfolio",
    "blog",
    "markdown"
  ],
  "bin": {
    "cli-typescript-starter": "./bin/run"
  },
  "directories": {
    "lib": "src",
    "bin": "bin"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup-node",
    "build:watch": "tsup-node --watch",
    "clean": "rimraf dist",
    "commit": "cz",
    "commitlint": "commitlint --edit",
    "compile": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "ts-node ./bin/run.ts",
    "start:node": "node ./bin/run",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@1chooo/eslint-config": "workspace:^",
    "@1chooo/typescript-config": "workspace:*",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@jest/globals": "^29.7.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/prompts": "^2.4.9",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.32",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "semantic-release": "^23.1.1",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "eslint": "9.30.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "giget": "^1.2.3",
    "picocolors": "^1.0.1",
    "yargs": "^17.7.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
